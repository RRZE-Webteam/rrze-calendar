{
    "name": "rrze/rrze-calendar",
    "type": "wordpress-plugin",
    "require": {
        "php": "^8.2.0",
        "johngrogg/ics-parser": "^3.4.0",
        "rlanvin/php-rrule": "^2.5.2",
        "cmb2/cmb2": "^2.11.0"
    },
    "autoload": {
        "psr-4": {
            "RRZE\\Calendar\\": "includes/"
        }
    },
    "extra": {
        "installer-paths": {
            "vendor/cmb2/cmb2": [
                "cmb2/cmb2"
            ]
        },
        "mozart": {
            "dep_namespace": "RRZE\\Calendar\\Vendor\\Dependencies\\",
            "dep_directory": "/includes/Vendor/Dependencies/",
            "classmap_directory": "/includes/Vendor/classes/dependencies/",
            "classmap_prefix": "RRZE_Calendar_Vendor_Dependencies_",
            "packages": [
                "rlanvin/php-rrule",
                "johngrogg/ics-parser",
                "cmb2/cmb2"
            ],
            "delete_vendor_directories": true
        }
    },
    "require-dev": {
        "wp-cli/wp-cli-bundle": "^2.12",
        "coenjacobs/mozart": "^0.7.1"
    },
    "scripts": {
        "wp:make-pot": "wp i18n make-pot ./ languages/rrze-calendar.pot --domain=rrze-calendar --exclude=node_modules,vendor,_tmp",
        "wp:make-php": "wp i18n make-php languages",
        "wp:make-json": [
            "wp i18n make-json languages/rrze-calendar-de_DE.po --no-purge",
            "wp i18n make-json languages/rrze-calendar-de_DE_formal.po --no-purge"
        ],
        "wp:make-all": [
            "@wp:make-pot",
            "@wp:make-php",
            "@wp:make-json"
        ],
        "post-install-cmd": [
            "\"vendor/bin/mozart\" compose",
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "\"vendor/bin/mozart\" compose",
            "composer dump-autoload"
        ]
    }
}