{
    "name": "rrze/rrze-calendar",
    "type": "wordpress-plugin",
    "require": {
        "php": "^8.2.0",
        "johngrogg/ics-parser": "^3.5.1",
        "rlanvin/php-rrule": "^2.5.2",
        "cmb2/cmb2": "^2.11.0"
    },
    "autoload": {
        "psr-4": {
            "RRZE\\Calendar\\": "includes/"
        }
    },
    "extra": {
        "installer-paths": {
            "vendor/cmb2/cmb2": [
                "cmb2/cmb2"
            ]
        }
    },
    "scripts": {
        "wp:make-pot": "wp i18n make-pot ./ languages/rrze-calendar.pot --domain=rrze-calendar --exclude=node_modules,vendor,_tmp",
        "wp:make-php": "wp i18n make-php languages",
        "wp:make-json": [
            "wp i18n make-json languages/rrze-calendar-de_DE.po --no-purge",
            "wp i18n make-json languages/rrze-calendar-de_DE_formal.po --no-purge"
        ],
        "wp:make-all": [
            "@wp:make-pot",
            "@wp:make-php",
            "@wp:make-json"
        ]
    }
}